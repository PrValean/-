#include <iostream>
#include <string>
#include <sstream>
using namespace std;

int main()
{
string str;
string subStr;
string elem;

cout << "Enter the line. The separator is colon" << endl;
cin >> str;
cout << "Enter the substring you want to find" << endl;
cin >> subStr;

istringstream iss(str);
    while (getline(iss, elem, ';')) {
        size_t pos = elem.find(subStr); 
        //Zähler hinzufügen

        if (elem.find(subStr) == string::npos) { 
            cout << "Not found" << endl; 
        } else { cout << pos << endl; }
    }

return 0;
}
