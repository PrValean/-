#include <iostream>
#include <string>
using namespace std;

int main()
{
string str;
string subStr;
cout << "Enter the line" << endl;
cin >> str;
cout << "Enter the substring you want to find" << endl;
cin >> subStr;

size_t pos = str.find(subStr);
cout << pos << endl;

if (str.find(subStr) == string::npos)
{
cout << "Not found" << endl;
}

return 0;
}
